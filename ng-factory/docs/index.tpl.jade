doctype html
html(ng-app="ngDocs")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    title {{ pkg.name }} - {{ pkg.description }}
    meta(name="description", content="{{ pkg.description }}")

    <!--[if lt IE 9]>
    script(src="//cdnjs.cloudflare.com/ajax/libs/es5-shim/4.0.0/es5-shim.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
    <![endif]-->

    //- Sets initial viewport load and disables zooming
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    //- Makes your prototype chrome-less once bookmarked to your phone's home screen
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")
    //- Set a shorter title for iOS6 devices when saved to home screen
    meta(name="apple-mobile-web-app-title" content="{{ pkg.name }}")

    //- Favicon
    link(rel="icon", href="http://angularjs.org/favicon.ico", type="image/x-icon")
    link(rel="shortcut icon", href="http://angularjs.org/favicon.ico", type="image/x-icon")
    //- Author of this application
    link(rel="author" href="{{ pkg.author.url }}")

    // build:css styles/components.min.css
    // bower:css
    // endbower
    // endbuild

    // build:css styles/main.min.css
    link(rel="stylesheet", href="styles/main.css")
    // endbuild

  body(ng-controller="MainCtrl")
    nav(ng-include="'views/includes/navbar.html'")
    header(ng-include="'views/includes/header.html'")
    .container(ng-include="'views/includes/container.html'")
    footer(ng-include="'views/includes/footer.html'")

    // build:libs scripts/components.min.js
    // bower:js
    // endbower
    // endbuild

    // build:js scripts/main.min.js
    script(src="scripts/app.js")
    // endbuild

    // build:js scripts/demos.min.js
    <% for (var i in modules) { %><% for (var j in modules[i].scripts) { %>
    script(src="<%= modules[i].scripts[j] %>")
    <% } %><% } %>
    // endbuild
